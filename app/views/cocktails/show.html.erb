<h2><%= @cocktail.name %></h2>

<% @cocktail.doses.each do |dose|  %>
  <%= dose.description %>
  <%= dose.ingredient.name %>
<% end %>

<%= link_to "add a dose", new_cocktail_dose_path(@cocktail) %>

<%= link_to "new", new_cocktail_path(@cocktail) %>

<%= link_to "edit", edit_cocktail_path(@cocktail) %>

<%= link_to "delete", cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure ?" } %>

<%= link_to "home", cocktails_path %>
